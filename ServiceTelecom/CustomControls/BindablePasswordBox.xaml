<UserControl x:Class="ServiceTelecom.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServiceTelecom.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    
    <PasswordBox x:Name="psbPassword"
                             FontSize="22"
                             FontFamily="Montserrat"
                             Foreground="Black"
                             FontWeight="Bold"
                             CaretBrush="#005fa1"
                             BorderBrush="#75ddff"
                             BorderThickness="0,0,0,4" 
                             Padding="50,10,20,0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/ServiceTelecom;component/Images/pass.png"
                                        Stretch="Uniform"
                                        AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
